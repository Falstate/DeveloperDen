<div class="row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/banner.jpg" class="panel-image-preview">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/avatar.jpg" height="50px" width="50px" class="rounded-img home-avatar"></div>
               
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                  <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                   <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count %></h6>
                  </div>
                </div>
            </div>

          </div>
        </div>
      
        <div class="panel panel-default">
          <div class="panel-body">
             <p>trends</p>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
        <%= render '/components/post_form' %><br><br>
        
          <% for @p in @posts %>
          <div class="panel panel-default post-panel">
              <div class="panel-body row">
                  
                  <div class="col-sm-1">
                      <img src="/avatar.jpg" height="50px" width="50px"></img>
                  </div>
                  <div class="sol-sm-11">
                      <p class="post-title"><%= User.find(@p.user_id).username %> - <%= @p.created_at.to_formatted_s(:short) %></p>
                      <p class="post-content"><%= @p.content %></p>
                  </div>
                
           </div>
         </div>
         
        <% end  %>

      </div>
</div>

